@{
    ViewBag.Title = "Recommend";
}

<a id="recommend" class="btn btn-primary"  style="text-align:center;margin-left:45%" href="Create" >Recomendar</a>
<h2 style="text-align:center">Recomendaciones a mi persona</h2>

<div class="container">
    <table class="table table-striped table-bordered table-condensed">
        <tr style="max-height:80%">
            
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Correo electrónico</th>
            <th>Comentario</th>
        </tr>
        @foreach (var item in ViewBag.recommend)
        {
            <tr>

                <td>@item.Name</td>
                <td>@item.Telephone</td>
                <td>@item.Email</td>
                <td>@item.Comment</td>
                
            </tr>
        }
    </table>
</div>

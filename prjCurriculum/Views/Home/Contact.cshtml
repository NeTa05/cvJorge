@{
    ViewBag.Title = "Contact";
}

<h2 style="text-align:center">Contacte a Jorge Zavala</h2>
<div id="divAlert"  style"text-align: center;width: 30%;margin-left: 33%;display:none">
</div>
<div class="panel panel-default" style="width: 35%;margin-left: 32%;background: rgb(170, 206, 228);text-align:center">
    <div class="panel-body" >
        
        <div class="editor-field input-border">
            <input type="text" id="email" name="email" placeholder="Correo electrónico" />
        </div>
        <br />
        <div class="editor-field input-border">
            <input type="text" id="name" name="name" placeholder="Nombre" />
        </div>
        <br />
        <div class="editor-field input-border">
            <textarea placeholder="Escribe un mensaje" id="message" name="message"></textarea>
        </div>
        <br />
        <button id="send" class="btn btn-primary" >Enviar mensaje</button>
    </div>
</div>




<script src="@Url.Content("~/Scripts/Js/Contact.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Js/Alert.js")" type="text/javascript"></script>

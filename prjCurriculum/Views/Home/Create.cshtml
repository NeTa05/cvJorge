@{
    ViewBag.Title = "Create";
}

<h2 style="text-align:center">Gracias por recomendarme</h2>
<br />
<div id="divAlert"  style"text-align: center;width: 30%;margin-left: 33%;display:hidden">
    
</div>


<div class="panel panel-default" style="width: 35%;margin-left: 32%;background: rgb(170, 206, 228);color: white;text-align:center">
    <div class="panel-body" >
        <div class="editor-field input-border">
            <input name="name" placeholder="Nombre" id="name" autofocus="autofocus"/>
        </div>
        <br />
        <div class="editor-field input-border">
            <input name="telephone" placeholder="Teléfono" id="telephone"/>
        </div>
        <br />
        <div class="editor-field input-border">
            <input name="email" placeholder="Correo electrónico" id="email" />
        </div>
         <br />
        <div class="editor-field input-border">
            <textarea name="comment" placeholder="Comentario" id="comment"></textarea> 
        </div>
        <br />
        <p>
            <a class="btn btn-primary" id="send"  >Enviar</a>
        </p>
        <div>
               
            <a class="btn btn-primary" id="back" href="Recommend" >Volver</a>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/Js/Create.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Js/Alert.js")" type="text/javascript"></script>